<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.flea.mappers.UserMapper">
	<insert id="join">
		insert into user (id,pw,name,nickname)
		values(#{id},#{pw}, #{name}, #{nickname})
	</insert>
	<select id="login" resultType="org.flea.domain.UserVO">
	select userkey,id,name,point, nickname from user where id=#{id} and pw=#{pw}

	</select>
	
	<update id="update">
		update user set nickname = #{nickname} where id = #{id}
	</update>
</mapper>